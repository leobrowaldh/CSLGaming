@if (LinkOption is not null)
{
    <button class="d-flex flex-column btn btn-link text-start text-decoration-none py-0 @(LinkOption.IsSelected ? "ps-0" : "ps-3")" @onclick="OnClick">
        @if (LinkOption.IsSelected)
        {
            <i class="bi-caret-right"></i>
        }
        @LinkOption?.Name
    </button>
}

@code {
    [Parameter] public LinkOption? LinkOption { get; set; }

    void OnClick()
    {
        
    }
}
